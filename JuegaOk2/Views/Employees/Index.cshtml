@model IEnumerable<Modelo.Models.EmployeeViewModel>
@{
    /**/

    ViewBag.Title = "Empleados";
}

<br />
<h2>Empleados</h2>
<hr />
<div style="text-align:left;padding:5px;">
    <a href="~/Employees/Crear/" class="btn btn-primary" title="Crear Nuevo Empleado">Nuevo</a>
    <a onclick="Reporte();" class="btn btn-danger" title="Exportar Reporte">.PDF</a>
</div>
<img src="~/Content/imagenes/logo.png" id="imgLogo" style="display:none"  />
<br />
<div class="row">
    <div class="table-responsive">
        <table id="table-views" class="table table-striped table-bordered  text-nowrap" cellspacing="0">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Título</th>
                    <th>País</th>
                    <th>Ciudad</th>
                    <th>Dirección</th>
                    <th>Teléfono</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(model => item.FirstName)</td>
                        <td>@Html.DisplayFor(model => item.LastName)</td>
                        <td>@Html.DisplayFor(model => item.Title)</td>
                        <td>@Html.DisplayFor(model => item.Country)</td>
                        <td>@Html.DisplayFor(model => item.City)</td>
                        <td>@Html.DisplayFor(model => item.Address)</td>
                        <td>@Html.DisplayFor(model => item.HomePhone)</td>
                        <td>
                            <a class="btn btn-info" href="~/Employees/Detalle/@item.EmployeeID">
                                <span>Detalles</span>
                            </a>
                            |
                            <a class="btn btn-warning" href="~/Employees/Editar/@item.EmployeeID">
                                <span>Editar</span>
                            </a>
                            |
                            <a class="btn btn-danger" href="~/Employees/Eliminar/@item.EmployeeID">
                                <span>Eliminar</span>
                            </a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    var strValue = "@((string)ViewBag.mssg)";
    if (strValue !== null && strValue !== '') {
        swal("", strValue, "success");
    }
</script>


