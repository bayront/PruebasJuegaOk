@model Modelo.Models.EmployeeViewModel
@{
    ViewBag.Title = "Detalle";
    var imgSrc = String.Format("data:image/gif;base64,{0}", ViewBag.Imagen);
}

<div class="container">
    <div class="row">
        <br />
        <h4>Desactivar Empleado |  Código: @Html.DisplayFor(model => model.EmployeeID)</h4>
        <h5>¿Está seguro de que desea desactivar a este empleado?</h5>
        <hr />
        <div class="col-lg-5 d-none d-lg-block">
            <div>
                <img src="@imgSrc" width="300" height="250" alt="Responsive image" class="img-fluid" />
            </div>
        </div>
        <div class="col-lg-6">
            <div class="p-5">
                <dl class="dl-horizontal">
                    <dt>
                        Nombre
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.FirstName)
                    </dd>

                    <dt>
                        Apellido
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.LastName)
                    </dd>

                    <dt>
                        Título
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Title)
                    </dd>

                    <dt>
                        Título de Cortesía
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TitleOfCourtesy)
                    </dd>

                    <dt>
                        Fecha de Nacimiento
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.BirthDate)
                    </dd>

                    <dt>
                        Fecha de Contratación
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.HireDate)
                    </dd>

                    <dt>
                        Dirección
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Address)
                    </dd>

                    <dt>
                        Ciudad
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.City)
                    </dd>

                    <dt>
                        Región
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Region)
                    </dd>

                    <dt>
                        Código Postal
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.PostalCode)
                    </dd>

                    <dt>
                        País
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Country)
                    </dd>

                    <dt>
                        Teléfono
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.HomePhone)
                    </dd>

                    <dt>
                        Extensión
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Extension)
                    </dd>

                    <dt>
                        Notas
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Notes)
                    </dd>

                    <dt>
                        Superior
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.informa)
                    </dd>
                </dl>
                <br />
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="col-md-10">
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                    <a href="~/Employees/Index/" class="btn btn-success">Cancelar</a>
                </div>
            }
        </div>
    </div>
</div>